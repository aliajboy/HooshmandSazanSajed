@page
@model Hooshmand.Pages.Users.AddVacationModel
@using Hooshmand.Models;
@inject UserManager<ApplicationUser> UserManager
@{
    ViewData["Title"] = "ثبت مرخصی";
    var users = UserManager.Users.ToList();
}
<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">ثبت ورود و خروج</h5>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-2">
                        <label asp-for="UserTime.UserId" class="control-label">کاربر</label>
                        <select asp-for="UserTime.UserId" class="form-control">
                            @foreach (var item in users)
                            {
                                <option value="@item.Id">@item.FullName</option>
                            }
                        </select>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="UserTime.EnterTime" class="control-label"></label>
                        <input type="date" asp-for="UserTime.EnterTime" class="form-control" />
                        <span asp-validation-for="UserTime.EnterTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
