@page
@model LoginModel

@{
    ViewData["Title"] = "ورود";
}
<div class="container">
    <div class="row justify-content-center login-bg p-4">
        <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

            <!-- End Logo -->

            <div class="card mb-3">

                <div class="card-body">

                    <img src="/images/Hooshmand-Logo.jpg" alt="Hooshmand-sazan" width="100%" class="mb-2 rounded">
                    <div class="pt-4 pb-2">
                        <h5 class="card-title text-center pb-0 fs-4">ورود به حساب کاربری</h5>
                        <p class="text-center small">از ایمیل و کلمه عبور خود استفاده کنید</p>
                    </div>

                    <form class="row g-3 needs-validation" id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <div class="col-12">
                            <label asp-for="Input.Email" class="form-label">ایمیل</label>
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@gmail.com" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Input.Password" class="form-label">کلمه عبور</label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="کلمه عبور" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                من را به خاطر بسپار
                            </label>
                        </div>
                        <div class="col-12">
                            <button class="btn btn-primary w-100" type="submit">ورود</button>
                        </div>
                        <div class="col-12">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none">کلمه عبور را فراموش کرده‌اید؟</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
