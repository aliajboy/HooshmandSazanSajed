@page
@model Hooshmand.Pages.Users.EditUserTimeModel

@{
    ViewData["Title"] = "ویرایش زمان ورود و خروج";
}
<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">ویرایش ورود و خروج</h5>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="col-12">
                        <label asp-for="UserTime.EnterTime"></label>
                        <input asp-for="UserTime.EnterTime" class="form-control text-center" aria-required="true" />
                        <span asp-validation-for="UserTime.EnterTime" class="text-danger"></span>
                    </div>
                    <div class="col-12 mb-2">
                        <label asp-for="UserTime.ExitTime"></label>
                        <input asp-for="UserTime.ExitTime" class="form-control text-center" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="UserTime.ExitTime" class="text-danger"></span>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="UserTime.Vacation" /> @Html.DisplayNameFor(model => model.UserTime.Vacation)
                        </label>
                    </div>
                    <input type="hidden" asp-for="UserTime.Id" />
                    <input type="hidden" asp-for="UserTime.UserId" />
                    <div class="form-group mt-2">
                        <input type="submit" value="ثبت" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
