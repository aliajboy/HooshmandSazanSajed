@page
@model Hooshmand.Pages.Users.EditUserPasswordModel
@{
}
<div class="row">
    <div class="col-xl-6">

        <div class="card">
            <div class="card-body pt-3">
                <h5 class="card-title">ویرایش کلمه عبور</h5>
                <div class="tab-content">

                    <div class="tab-pane fade pt-3 active show" id="profile-change-password" role="tabpanel">
                        <form id="set-password-form" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <label asp-for="Input.NewPassword" class="form-label">کلمه عبور جدید</label>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" />
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                            </div>
                            <label asp-for="Input.ConfirmPassword" class="form-label">تکرار کلمه عبور جدید</label>
                            <div class="form-floating mb-3">
                                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" />
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                            <button type="submit" class="w-100 btn btn-lg btn-primary">ویرایش کلمه عبور</button>
                        </form>

                    </div>

                </div>

            </div>
        </div>

    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
