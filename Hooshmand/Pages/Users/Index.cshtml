@page
@model Hooshmand.Pages.Users.IndexModel
@using Hooshmand.Models;
@inject UserManager<ApplicationUser> UserManager
@{
    var users = UserManager.Users.ToList();
}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">لیست کاربران</h5>

        <a asp-area="Identity" asp-page="/account/register" class="btn btn-primary mb-1">افزودن کاربر جدید</a>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">نام</th>
                    <th scope="col">شغل</th>
                    <th scope="col">شماره تماس</th>
                    <th scope="col">ایمیل</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in users)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Job</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>
                            <form method="post" class="d-inline">
                                <a asp-page="/Users/EditUserProfile" asp-route-id="@item.Id">ویرایش اطلاعات</a> |
                                <a asp-page="/Users/EditUserPassword" asp-route-id="@item.Id">ویرایش پسورد</a>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
