@page
@model Hooshmand.Pages.Tasks.DailyTasks.CreateModel
@{
    ViewData["Title"] = "گزارش کار جدید"; 
    var user = await UserManager.GetUserAsync(User);
}
<div class="row">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">گزارش کار جدید</h5>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="DailyTask.UserId" class="form-control" value="@user.Id" />

                    <div class="form-group mb-2">
                        <label asp-for="DailyTask.Title" class="control-label"></label>
                        <input asp-for="DailyTask.Title" class="form-control" />
                        <span asp-validation-for="DailyTask.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-2">
                        <label asp-for="DailyTask.Description" class="control-label"></label>
                        <textarea asp-for="DailyTask.Description" class="form-control" style="height: 100px;"></textarea>
                        <span asp-validation-for="DailyTask.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="ثبت گزارش کار" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
